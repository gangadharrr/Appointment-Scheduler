@model Appointment_Scheduler.Models.UserDetails

@{
    ViewData["Title"] = "Sign Up";
}

<h1>Sign Up</h1>

<hr />
<h4>Profile Details</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="SignUp">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group"><br />
                <input asp-for="UserName" placeholder="Name" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group"><br />
                <input asp-for="Password_U" placeholder="Password" class="form-control" />
                <span asp-validation-for="Password_U" class="text-danger"></span>
            </div>
            <div class="form-group"><br/>
                <input asp-for="Email" placeholder="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group"><br/>
                <input asp-for="PhoneNumber" placeholder="Phone Number" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group"><br />
                <input asp-for="CompanyName" placeholder="Company Name" class="form-control" />
                <span asp-validation-for="CompanyName" class="text-danger"></span>
            </div>
            <div class="form-group"><br />
                <input asp-for="Designation" placeholder="Designation" class="form-control" />
                <span asp-validation-for="Designation" class="text-danger"></span>
            </div>
            <div class="form-group"><br />
                <a asp-action="Login">Already Have an account Try logging in?</a><br /><br />
                <input type="submit" value="Sign Up" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
