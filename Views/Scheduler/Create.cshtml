@model IEnumerable<Appointment_Scheduler.Models.UserDetails>

@{
    ViewData["Title"] = "Create Appointment";
    UserDetails userDetails = Appointment_Scheduler.Controllers.SchedulerController.userDetails;
}
<table style="table-layout: fixed;width: 1100px;">
    <tr>
        <td>
            <h2>Create Appointment</h2>
        </td>
        <td align="right">
            <a href="/Scheduler/Display?Email=@userDetails.Email" style="text-anchor:end;background-color:red;border-color:red;" class="btn btn-primary">cancel</a>
        </td>
    </tr>
</table>
<hr />
<h4>Meeting Details</h4><br/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="text" placeholder="Meeting Title" class="form-control" name="MeetingTitle"/><br/>
            <textarea type="text" placeholder="Meeting Description" class="form-control" name="MeetingDescription"></textarea>
            <br/>
            <select class="form-select" name="Email" default="Select User">
             <option value="none" selected disabled hidden>Select User</option>
            @foreach (UserDetails user in Model)
            {
                if (userDetails.Email != user.Email)
                {
                    <option value=@user.Email>@user.Email</option>
                }
            }
            </select>
            <label class="col-form-label-sm">Select Meeting Date</label>
            <input class="form-control" type="date"  name="MeetingDate" />
            <label class="col-form-label-sm">Select Meeting Start Time</label><br/>
            <input class="form-control" type="time" value=@DateTime.Now.ToString("HH:mm") name="MeetingStartTime" />
            <label class="col-form-label-sm">Select Meeting End Time</label><br/>
            <input class="form-control" type="time" value=@DateTime.Now.ToString("HH:mm") name="MeetingEndTime" /><br/>
            <input type="text" placeholder="Meeting Url" class="form-control" name="MeetingUrl"/><br />
            <input type="submit" class="btn btn-primary" />

        </form>
    </div>
